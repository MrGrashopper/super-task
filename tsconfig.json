{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@components":   ["components/index"],

      "@project/*":    ["components/project/*"],
      "@project":      ["components/project/index"],

      "@task/*":       ["components/task/*"],
      "@task":         ["components/task/index"],

      "@ui/*":         ["components/ui/*"],
      "@ui":           ["components/ui/index"],

      "@lib/*":        ["lib/*"],
      "@types/*":      ["types/*"],

      "@hooks/*":      ["hooks/*"],
      "@hooks":        ["hooks/index"],

      "@constants/*":  ["constants/*"],
      "@constants":    ["constants/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
